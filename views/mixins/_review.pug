mixin review(review)
  .review__header
    .review__author
      img.avatar(src=review.author.gravatar)
      p= review.author.name
    .review__stars(title=`Ratted ${review.rating} out of 5 stars`)
      p #{review.rating} stars 
    time.review__time(datetime=review.created)= h.moment(review.created).fromNow()

  .review__body
    p= review.text
